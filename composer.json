{
    "name": "codesleeve/generator",
    "description": "Use a directory of twig templates and a context generator class to scaffold out boilerplate code.",
    "authors": [
        {
            "name": "Kelt",
            "email": "kelt@codesleeve.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "illuminate/support": "4.1.*",
        "symfony/filesystem": "v2.4.2",
        "symfony/console": "2.4.*",
        "twig/twig": "1.*"
    },
    "require-dev": {
        "mikey179/vfsStream": "1.3.*@dev",
        "behat/behat": "2.4.*@stable",
        "phpunit/phpunit": "3.7.*",
        "phpspec/phpspec": "2.0.*@dev"
    },
    "autoload": {
        "psr-0": {
            "Codesleeve\\Generator": "src/"
        },
        "classmap":[
            "spec/bootstrap/ObjectBehavior.php"
        ]
    },
    "minimum-stability": "stable"
}
